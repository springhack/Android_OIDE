<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:key="date_format"
        android:title="@string/date_format" >
        <ListPreference
            android:key="sys_format"
            android:title="@string/use_selected_format" />

        <CheckBoxPreference
            android:key="custom_format"
            android:title="@string/use_custom_format" />

        <EditTextPreference
            android:defaultValue="@string/date_format_summary"
            android:key="custom_date_format"
            android:summary="@string/date_format_summary"
            android:title="@string/date_format_title" />
    </PreferenceCategory>

</PreferenceScreen>